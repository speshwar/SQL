CREATE DATABASE OMSAIRAM;
/* CREATING THE TABLE*/
USE OMSAIRAM;
CREATE TABLE FAMILY(
id INT PRIMARY KEY,
myname VARCHAR(30),
mother VARCHAR(20)
);

-- DISPLAYING STUDENT DETAILS
DESCRIBE FAMILY;

-- ALTER THE TABLE
ALTER TABLE FAMILY ADD PHONE_NUM NUMERIC(10);
-- we can us this also ALTER TABLE FAMILY ADD COLUMN PHONE_NUM NUMERIC(10);

-- DELETE THE COLUMN
ALTER TABLE FAMILY DROP PHONE_NUM ;
-- we can us this also ALTER TABLE FAMILY DROP COLUMN PHONE_NUM ;
